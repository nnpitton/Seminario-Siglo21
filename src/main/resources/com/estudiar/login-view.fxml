<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.estudiar.controller.LoginController"
            prefWidth="400" prefHeight="300">
    <VBox alignment="CENTER" spacing="10" AnchorPane.topAnchor="40"
          AnchorPane.leftAnchor="40" AnchorPane.rightAnchor="40" AnchorPane.bottomAnchor="40">
        <Label text="Estudi-AR" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
        <TextField fx:id="txtEmail" promptText="Correo electrónico" />
        <PasswordField fx:id="txtPassword" promptText="Contraseña" />
        <Button text="Iniciar sesión" onAction="#handleLogin" prefWidth="150" />
        <Label fx:id="lblMensaje" textFill="red" />
    </VBox>
</AnchorPane>
